[
  {
    "outputFileName": "dist/app.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
       "wwwroot/dist/app.css"//,
      // "wwwroot/dist/lib/bootstrap/dist/css/bootstrap.min.css"
    ]
  },
  {
    "outputFileName": "dist/app.bundle.js",
    "inputFiles": [
      "wwwroot/dist/app.bundle.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optinally generate .map file
    "sourceMap": false
  },
  {
    "outputFileName": "dist/polyfills.bundle.js",
    "inputFiles": [
      "wwwroot/dist/polyfills.bundle.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optinally generate .map file
    "sourceMap": false
  },
  {
    "outputFileName": "dist/vendor.bundle.js",
    "inputFiles": [
      "wwwroot/dist/vendor.bundle.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optinally generate .map file
    "sourceMap": false
  }
]
